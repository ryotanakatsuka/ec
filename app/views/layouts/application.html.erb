<!DOCTYPE html>
<html>
  <head>
    <title>Ec</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script type="text/javascript" src="https://js.pay.jp/v1/"></script>
    <%= stylesheet_link_tag 'application', media: 'all'  %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
  
    <header>
      <div class="heading">
        <%=link_to"米ナビ","/",class:"heading-title"%>
      </div>
      <div class="navbar">
        <ul class="nav-lists">
        <%if user_signed_in? %>
        <li><%=link_to "#{current_user.first_name}様","#",class:"user-name"%></li>
        <li><%=link_to "ログアウト",destroy_user_session_path, method: :delete,class:"logout"%></li>
          <% if current_user.admin? %>
        <li><%=link_to "出品する",new_item_path,class: "exhibit"%></li>
        <li><%=link_to "新着情報投稿",new_news_path,class: "exhibit"%></li>
          <% end %>
        <%else%>
      <li><%=link_to "ログイン",new_user_session_path,class:"login"%></li>
      <li><%=link_to "新規登録",new_user_registration_path,class:"sign-up"%></li>
      <%end%>
      </ul>
     </div>
    </header>
    <%= yield %>
    
    
  </body>
</html>
