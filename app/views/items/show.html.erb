<%=render "shared/header"%>

<div class="show-edit">
  <div class="show">
  <% if  current_user.admin?%>
    
  <%=link_to "編集する",edit_item_path(@item.id),class:"link-show"%>
  </div>
  <div class="edit">
  <%= link_to "削除する",item_path(@item.id),method: :delete,class:"link-edit"%>
  <% end %>
  </div>
</div>


<div class="item-show">
 <div class="item-box">
  <%=image_tag @item.image,class:"item-img"%>
    <div class="item-info">
      <div class="item-name">【商品名】<%=@item.name%></div>
      <div class="item-prefecture">【生産地】<%=@item.prefecture.name%>産</div>
      <div class="item-manufacturer">【生産者】<%=@item.manufacturer%></div>
      <div class="item-internal-capacity">【内容量】<%=@item.internal_capacity%></div>
      <div class="item-delivery-date">
            【発送までの日数】<%=@item.delivery_date.name%>
          </div>
      <div class="item-price">【販売価格】<%=@item.price%>円(送料込み)</div>
    </div>
 </div>

 <div class="buy">
    <%=link_to "この商品の購入画面へ",new_item_order_path(@item.id),class:"link-buy"%>
 </div>





















</div>