<div class="registrations">
<h2>新規登録</h2>

<%= form_for(@user, url: user_registration_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="field">
    <div>お名前（性）</div>
    <%= f.text_field :first_name,placeholder:"例）山田" %>
  </div>
  <div class="field">
     <div>お名前（名）</div>
    <%= f.text_field :last_name, placeholder:"例）太郎"%>
  </div>
  <div class="field">
    <div>カタカナ（性）</div>
    <%= f.text_field :first_name_kana, placeholder:"例）ヤマダ"%>
  </div>
  <div class="field">
     <div>カタカナ（名）</div>
    <%= f.text_field :last_name_kana, placeholder:"例）タロウ"%>
  </div>

  <div class="field">
    <div>メールアドレス</div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"PC・携帯どちらも可" %>
  </div>

  <div class="field">
    <div>パスワード</div>
    
    <%= f.password_field :password, autocomplete: "new-password",placeholder:"６文字以上の半角数字" %>
  </div>

  <div class="field">
    <div>上記と同じパスワード</div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "次へ" %>
  </div>
<% end %>

</div>

